<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" /> <!--background color of box-->
        </shape>
    </item>

    <item
        android:right="-5dp"
        android:left="-5dp"
        android:top="-5dp">
        <shape>
            <solid android:color="@color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/bottom_line" />  <!-- color of stroke -->
        </shape>
    </item>
</layer-list>